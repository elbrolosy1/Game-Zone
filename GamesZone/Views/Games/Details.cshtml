@model Games
@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-dark rounded-4 mt-5 overflow-hidden bg-dark text-light">
    <div class="card-body p-0">
        <div class="row g-0">
            <!-- Text Content Column -->
            <div class="col-lg-8 p-4 p-xl-5 d-flex flex-column">
                <!-- Title Section -->
                <div class="mb-4">
                    <h1 class="display-4 fw-bold text-danger mb-3">@Model.Name</h1>
                    <span class="badge bg-gradient fs-5 px-3 py-2 mb-4" style="background: linear-gradient(45deg, #6c757d, #343a40);">
                        @Model.Category?.Name
                    </span>
                </div>

                <!-- Description -->
                <div class="mb-5">
                    <p class="fs-5 lh-base" style="color: #adb5bd;">
                        @Model.Description
                    </p>
                </div>

                <!-- Features Section -->
                <div class="mt-auto">
                    <h3 class="h4 text-warning mb-4">Supported devices</h3>
                    <div class="d-flex flex-wrap gap-3">
                        @foreach (var gameDevice in Model.Devices)
                        {
                            <div class="device-icon bg-gradient p-3 rounded-3"
                                 style="background: linear-gradient(45deg, #2b2b2b, #1a1a1a);">
                                <i class="@gameDevice.Device.Icon fs-3 text-light"></i>
                                <span class="ms-2 text-muted">@gameDevice.Device.Name</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Image Column -->
            <div class="col-lg-4">
                <div class="h-100 position-relative">
                    <img src="@($"/{FileSetting.ImagesPath}/{Model.Cover}")"
                         alt="@Model.Name"
                         class="img-fluid h-100 w-100 object-fit-cover"
                         style="filter: brightness(0.9);">
                    <div class="position-absolute bottom-0 start-0 p-4">
                        <div class="bg-dark bg-opacity-75 p-3 rounded-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .device-icon {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .device-icon:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255,255,255,0.1);
        }

    .badge.bg-gradient {
        letter-spacing: 1px;
        font-weight: 500;
    }
</style>